<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Allow JIT compilation (needed for WebView) -->
    <key>com.apple.security.cs.allow-jit</key>
    <true/>

    <!-- Allow unsigned executable memory (needed for WebView) -->
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <true/>

    <!-- Disable library validation (allows loading dynamic libraries) -->
    <key>com.apple.security.cs.disable-library-validation</key>
    <true/>

    <!-- File system access for reading ISO/IMG files -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>

    <!-- Full disk access for writing to USB drives -->
    <key>com.apple.security.files.all</key>
    <true/>

    <!-- Device access for USB drives -->
    <key>com.apple.security.device.usb</key>
    <true/>
</dict>
</plist>
